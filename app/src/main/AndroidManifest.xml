<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neptuo.vocabularyapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="com.neptuo.vocabularyapp.MyApplication">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TranslateActivity"
            android:label="@string/title_activity_translate"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neptuo.vocabularyapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.BrowseActivity"
            android:label="@string/title_activity_browse"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neptuo.vocabularyapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.DownloadActivity"
            android:label="@string/title_activity_download"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neptuo.vocabularyapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ConfigurationActivity"
            android:label="@string/title_activity_configuration"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neptuo.vocabularyapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.BrowseItemActivity"
            android:label="@string/title_activity_browse_item"
            android:parentActivityName=".ui.BrowseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neptuo.vocabularyapp.ui.BrowseActivity" />
        </activity>
    </application>

</manifest>
